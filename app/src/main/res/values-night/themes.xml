<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.XPScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_button</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Customized Dark Mode theme -->
    <style name="fragment_bg">
        <item name="android:background">#232323</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="app_bar">
        <item name="android:color">#121212</item>
    </style>

    <style name="edit_text_bg">
        <item name="android:background">#3E3D3D</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="line">
        <item name="android:background">#3E3D3D</item>
    </style>

    <style name="android_hint">
        <item name="android:textColorHint">#616161</item>
    </style>

</resources>